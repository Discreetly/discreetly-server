// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Groups {
  id      String  @id @map("_id")
  groupId String  @unique
  name    String?
  rooms   Rooms[]
}

model Rooms {
  id                  String       @id @map("_id")
  roomId              String       @unique
  name                String
  groupId             String
  group               Groups       @relation(fields: [groupId], references: [groupId])
  identityCommitments String[]     @default([])
  identities          Identities[] @relation(fields: [identityCommitments], references: [id])
}

model Identities {
  id          String   @id @map("_id")
  identityId  String   @unique
  joinedRooms String[] @default([])
  rooms       Rooms[]  @relation(fields: [joinedRooms], references: [id])
}
