// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Groups {
  id      String  @id @map("_id")
  groupId String  @unique
  name    String?
  rooms   Rooms[]
}

model Rooms {
  id         String         @id @map("_id")
  roomId     String         @unique
  name       String
  group      Groups         @relation(fields: [groupId], references: [groupId])
  groupId    String
  identities IdentityRoom[]
}

model Identities {
  id         String         @id @map("_id")
  identityId String         @unique
  rooms      IdentityRoom[]
}

model IdentityRoom {
  id         String     @id @map("_id")
  identity   Identities @relation(fields: [identityId], references: [identityId])
  identityId String
  room       Rooms      @relation(fields: [roomId], references: [roomId])
  roomId     String
}
